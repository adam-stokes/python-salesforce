#!/usr/bin/env python
# vim:syntax=python
# sfc - cli to salesforce api
from sforce import COMMONS as c
from sforce.client import sf_session, sf_services
from sforce.models import (Base,
                           Case,
                           Account)
import yaml
import os
from pprint import pprint


if __name__=="__main__":
    c['sandbox'] = True
    c['client_key'] = os.environ['SFKEY']
    c['client_secret'] = os.environ['SFSECRET']
    # Intialize session
    sf_session(c)
    case = Case(c)
    _base = Base(c)
    pprint(sf_services(c))
    

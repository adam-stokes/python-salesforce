#!/usr/bin/env python
# vim:syntax=python
# sfc - cli to salesforce api
from sforce import client, account, case
from pprint import pprint

if __name__=="__main__":
    sfc = client.SF(True)
    # initialize session
    ret, res = sfc.session()
    if ret == 0:
        # retrieve some data
        account = account.SFAccount()
        pprint(account.describe())
        pprint(account.accountById('001M000000P0UzbIAF'))
